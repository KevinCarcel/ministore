{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
<main class="paddingTop">
    <h1 class="text-center">Tous nos produits</h1>
<div class="d-flex justify-content-center"> 
      <form action="{{ path('app_produit_index') }}" method="get">
      <input type="text" name="nom" class="form-control mb-2" placeholder="Nom du produit">
        <select name="type" class="form-control mb-2" style="max-width: 150px">
          <option value="">Tous les types</option>
            {% for type in types %}
              <option value="{{ type.id }}">{{ type }}</option>
            {% endfor %}
        </select>
    <button class="btn btn-outline-secondary me-3" type="submit">Filtrer</button>
    <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary">Réinitialiser</a>
</form>
</div>
        <div class=" grid gap-5 column-gap-2 mt-4 row d-flex justify-content-center">
        {% for produit in produits %}
    <div class="card mb-3 shadow p-3 mb-5 bg-body-tertiary rounded col-md-6"  style="max-width: 740px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/uploads/photos/{{ produit.image }}" class="img-fluid rounded-start" alt="photoProduit">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ produit.nom }}</h5>
        <p class="card-text">{{ produit.type }}</p>
        <p class="card-text">Prix : {{ produit.prix /100 }} €</p>
        <p class="card-text">Stock disponible : {{ produit.stock}}</p>

        {% if produit.stock > 0 %}
         <form action="{{ path('cart_add', {'id': produit.id}) }}" method="post">
        <button type="submit" class="btn btn-primary">Ajouter au panier</button>
        <input type="number" name="quantity" min="1" max="{{ produit.stock }}" value="1" class="ms-4">
        </form>
        {% else %}
        <button type="button" class="btn btn-danger" disabled>Produit indisponible</button>
        {% endif %}

                <!-- Button trigger modal -->
<button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#exampleModal{{produit.id}}">
  Plus d'information
</button>
<!-- Modal -->
<div class="modal fade text-info" id="exampleModal{{produit.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">{{produit.nom}}</h1>
      </div>
      <div class="modal-body d-flex">
      <img src="/uploads/photos/{{ produit.image }}" class="img-fluid rounded-start me-3" alt="photoProduit">
        <div class="d-flex flex-column">
        <p>{{ produit.description }}</p>
        <p class="text-center text-secondary">Prix : {{ produit.prix /100 }} €</p>
        {% if produit.stock > 0 %}
        <form action="{{ path('cart_add', {'id': produit.id}) }}" method="post">
        <button type="submit" class="btn btn-primary">Ajouter au panier</button>
        <input type="number" name="quantity" min="1" max="{{ produit.stock }}" value="1" class="ms-4">
        </form>
        {% else %}
        <button type="button" class="btn btn-danger " disabled>Produit indisponible</button>
        {% endif %}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</div>
    </div>
    </div>
    </div>

       {% else %}
			<p>
				<td colspan="5">no records found</td>
			</p>
    </main>
    {% endfor %}
{% endblock %}
