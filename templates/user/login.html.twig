{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block body %}
<div class="container paddingTop">
    <h2 class"mt-4">Se connecter</h2>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="mt-4">
        <label for="username" class="form-label">Email:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">

        <label for="password" class="form-label">Mot de passe:</label>
        <input class="form-control" type="password" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
    </form>
    </div>
    <div class="container">
        <p>Vous n'avez pas de compte ?</p>
    <a href="{{ path('app_user_register') }}" class="btn btn-primary">S'inscrire</a>
    </div>
    
{% endblock %}