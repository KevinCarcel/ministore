{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe{% endblock title %}

{% block body %}
<main class="paddingTop">
<div class="container">
  <h1 class="mt-4">Modification de votre Mot de passe</h1>

  {% for message in app.flashes('warning') %}
        <div class="alert alert-warning mt-4">
          {{message}}
        </div>
        {% endfor %}

      {{form_start(UserPasswordType)}}
      {{ form_row(UserPasswordType.plainPassword) }}
      {{ form_row(UserPasswordType.newPassword) }}
      {{form_end(UserPasswordType)}}
</div>
</main>
{% endblock %}